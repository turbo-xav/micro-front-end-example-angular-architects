{
  "name": "angular-mf",
  "version": "0.0.0",
  "scripts": {
    "ng": "ng",
    "start": "concurrently \"npm run start:mfe1\" \"npm run start:shell\" \"npm run start:web-components\" ",
    "start:mfe1": "ng serve mfe1 -o",
    "start:shell": "ng serve shell -o",
    "start:web-components": "ng serve web-components -o",
    "build-ci": "npm run build:shell && npm run build:mfe1 && npm run build:web-component",
    "build:shell": "ng build shell  --configuration production",
    "build:mfe1": "ng build mfe1 --configuration production",
    "build:web-component": "ng build web-components --configuration production",
    "start:build": "concurrently \"npm run start:build:shell\" \"npm run start:build:mfe1\" \"npm run start:build:web-components\" ",
    "start:build:shell": "http-server dist/shell/browser --port=4200 --cors",
    "start:build:mfe1": "http-server dist/mfe1/browser --port=4201 --cors",
    "start:build:web-components": "http-server dist/web-components/browser --port=4202 --cors",
    "watch": "ng build --watch --configuration development",
    "test": "ng test",
    "serve:ssr:web-components": "node dist/web-components/server/server.mjs"
  },
  "private": true,
  "dependencies": {
    "@angular-architects/module-federation": "^19.0.3",
    "@angular/animations": "^19.0.0",
    "@angular/common": "^19.0.0",
    "@angular/compiler": "^19.0.0",
    "@angular/core": "^19.0.0",
    "@angular/forms": "^19.0.0",
    "@angular/platform-browser": "^19.0.0",
    "@angular/platform-browser-dynamic": "^19.0.0",
    "@angular/platform-server": "^19.0.0",
    "@angular/router": "^19.0.0",
    "@angular/ssr": "^19.2.1",
    "@softarc/native-federation-node": "^2.0.10",
    "es-module-shims": "^1.5.12",
    "express": "^4.18.2",
    "ng-dynamic-component": "^10.8.2",
    "rxjs": "~7.8.0",
    "tslib": "^2.3.0",
    "zone.js": "~0.15.0"
  },
  "devDependencies": {
    "@angular-architects/native-federation": "^19.0.16",
    "@angular-devkit/build-angular": "^19.2.1",
    "@angular/cli": "^19.0.7",
    "@angular/compiler-cli": "^19.0.0",
    "@types/express": "^4.17.17",
    "@types/jasmine": "~5.1.0",
    "@types/node": "^18.18.0",
    "concurrently": "^9.1.2",
    "http-server": "^14.1.1",
    "jasmine-core": "~5.4.0",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "typescript": "~5.6.2"
  }
}
